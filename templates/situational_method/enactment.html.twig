                let atleastOneTaskPending = false;
                getChildren(previousTask.id).forEach(function (childNode, index) {
                    let respectiveTask = getTaskObject(parseInt(childNode.id));
                    if (respectiveTask.status !== 2 || !('status' in respectiveTask)) {
                        atleastOneTaskPending = true;
                    }
                });
                if (atleastOneTaskPending)
                    canTaskBeStarted.status = false;
            }
        }


