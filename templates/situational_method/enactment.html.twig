        function checkIfPreviousTasksHaveBeenFinished(canTaskBeStarted, task)
        {
            let previousTask = null;
            edges.forEach(function (edge, index) {
                if (edge.arrows === "to" && edge.color === "blue" && parseInt(edge.to) === parseInt(task.id) && !('smooth' in edge)) {
