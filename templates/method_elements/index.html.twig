{% extends 'base.html.twig' %}

{% block title %} Method Elements {% endblock %}

{% block body %}

    <div class="mt-5">
        {{ include('@includes/method_base_nav.html.twig') }}
    </div>

    <div class="w-100 d-flex flex-row justify-content-around" style="margin-top:5%">
        <div class="d-flex flex-column justify-content-around align-items-center" style="width: 33%">
            <a href="{{ path('create_process') }}" class="btn btn-sm btn-success"> Create new Processes</a>
            <a href="{{ path('create_role') }}" class="btn btn-sm btn-warning mt-1"> Create new Roles</a>

        </div>
        <div class="d-flex flex-column justify-content-around align-items-center" style="width: 33%">
            <a href="{{ path('create_artifact') }}" class="btn btn-sm btn-info"> Create new Artifacts</a>
            <a href="{{ path('create_tool') }}" class="btn btn-sm btn-dark mt-1"> Create new Tools</a>
        </div>
        <div class="d-flex flex-column justify-content-around align-items-center" style="width: 33%">

            <a href="{{ path('create_process_type') }}" class="btn btn-sm btn-primary"> Create new Process Types</a>
            <a href="{{ path('create_situational_factor') }}" class="btn btn-sm btn-secondary mt-1"> Create new Situational Factors</a>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-success">
            <b>Processes</b>
        </div>
        <div class="card-body">
            <table class="table table-sm table-success">
                <thead class="text-center">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Name</th>
                    <th scope="col">Process Type</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody class="text-center bg-transparent">
                {% for process in processes %}
                    <tr>
                        <td><a href="{{ path('edit_process',{'id':process.id}) }}">{{ loop.index }}</a></td>
                        <td>{{ process.name }}</td>
                        <td>{{ process.implodedProcessKinds }}</td>
                        <td><a href="#" ><i style="font-size:24px" class="fa">&#xf014;</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mt-5">
        <div class="card-header bg-warning">
            <b>Roles</b>
        </div>
        <div class="card-body">
            <table class="table table-sm table-warning">
                <thead class="text-center">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Name</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for role in roles %}
                    <tr>
                        <td><a href="{{ path('edit_role',{'id':role.id}) }}">{{ loop.index }} </a></td>
                        <td>{{ role.name }}</td>
                        <td><a href="#" ><i style="font-size:24px" class="fa">&#xf014;</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mt-5">
        <div class="card-header bg-info">
            <b>Artifacts</b>
        </div>
        <div class="card-body">
            <table class="table table-sm table-info">
                <thead class="text-center">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Name</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for artifact in artifacts %}
                    <tr>
                        <td><a href="{{ path('edit_artifact',{'id':artifact.id}) }}">{{ loop.index }} </a></td>
                        <td>{{ artifact.name }}</td>
                        <td><a href="#" ><i style="font-size:24px" class="fa">&#xf014;</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <div class="card mt-5">
        <div class="card-header bg-dark text-white">
            <b>Tools</b>
        </div>
        <div class="card-body">
            <table class="table table-sm table-dark">
                <thead class="text-center">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Tool Type</th>
                    <th scope="col">Tools</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for tool in tools %}
                    <tr>
                        <td><a href="{{ path('edit_tool',{'id':tool.id}) }}">{{ loop.index }} </a></td>
                        <td>{{ tool.type }}</td>
                        <td>{{ tool.implodedVariants }}</td>
                        <td><a href="#" ><i style="font-size:24px" class="fa">&#xf014;</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <div class="card mt-5">
        <div class="card-header bg-primary">
            <b>Process Types</b>
        </div>
        <div class="card-body">
            <table class="table table-sm table-primary">
                <thead class="text-center">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Name</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for type in processTypes %}
                    <tr>
                        <td><a href="{{ path('edit_process_type',{'id':type.id}) }}">{{ loop.index }} </a></td>
                        <td>{{ type.name }}</td>
                        <td><a href="#" ><i style="font-size:24px" class="fa">&#xf014;</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <div class="card mt-5">
        <div class="card-header bg-secondary">
            <b>Situational Factors</b>
        </div>
        <div class="card-body">
            <table class="table table-sm table-secondary">
                <thead class="text-center">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Name</th>
                    <th scope="col">Values</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for factor in situationalFactors %}
                    <tr>
                        <td><a href="{{ path('edit_situational_factor',{'id':factor.id}) }}">{{ loop.index }} </a></td>
                        <td>{{ factor.name }}</td>
                        <td>{{ factor.implodedVariants }}</td>
                        <td><a href="#" ><i style="font-size:24px" class="fa">&#xf014;</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}