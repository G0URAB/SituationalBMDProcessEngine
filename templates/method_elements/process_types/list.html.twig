{% extends 'base.html.twig' %}
{% block title %}Generic Activities{% endblock %}


{% block body %}
  <div class="mt-3 d-flex flex-row justify-content-center w-100">
    <a href="#" class="btn btn-primary">Create a Generic Activity</a>
  </div>

  <div class="card mt-4">
    <div class="card-header">
      All BMD Graphs
    </div>
    <div class="card-body">

      <table class="table m-auto">
        <thead class="bg-light">
        <tr>
          <th scope="col">Index</th>
          <th scope="col">BMD Graph Name</th>
          <th scope="col">View</th>
          <th scope="col">Update</th>
        </tr>
        </thead>
        <tbody>
        {#{% for graph in bmdGraphs %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ graph.name }}</td>
                <td><a target="_blank" #}{#href="{{ path('show_pattern',{'id':pattern.id}) }}"#}{#>View</a></td>
                <td><a target="_blank" #}{#href="{{ path('update_pattern',{'id':pattern.id}) }}"#}{#>Update</a></td>
            </tr>
        {% endfor %}#}
        </tbody>
      </table>
    </div>
  </div>

{% endblock %}
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
  <title>Method Base</title>
</head>
<body>
<div class="container mt-3">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" style="pointer-events: none" href="#">Method Base</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
            aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav mr-auto"
          style="width:100%; display: flex; flex-direction: row; justify-content: space-around;">
        <li class="nav-item">
          <a class="nav-link {% if 'patterns' in app.request.uri %}active{% endif %}" href="#">BMD Patterns </a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if 'workUnit' in app.request.uri %}active{% endif %}" href="#">Process Fragments </a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if 'workProduct' in app.request.uri %}active{% endif %}" href="#">Product Fragments </a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if 'situationalFactors' in app.request.uri %}active{% endif %}" href="#">Situational Factors </a>
        </li>
      </ul>
    </div>
  </nav>
</div>
</body>
</html>
