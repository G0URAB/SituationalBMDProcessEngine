{% extends 'base.html.twig' %}

{% block title %} Edit Team Members {% endblock %}

{% block body %}

    <h2 class="mt-5 text-center">Edit a Team Member </h2>

    <div class="container mt-5">

        {{ form_start(form) }}
        {{ form_row(form.employeeName) }}
        {{ form_row(form.email) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.password,{'label':'Reset Password'}) }}

        <div class="form-check mb-3">
            <input class="form-check-input" type="hidden" value="" id="password-reset-counter" name="password_reset_counter">
        </div>

        {{ form_row(form.add,{'label':'Save'}) }}
        {{ form_end(form) }}

    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        $("#user_password").val("abc123");
    </script>

{% endblock %}